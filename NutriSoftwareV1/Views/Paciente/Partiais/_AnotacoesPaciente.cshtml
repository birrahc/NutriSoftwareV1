@model NutriSoftwareV1.Models.Paciente
<div class="container-fluid p-0" style="overflow-x: hidden; overflow-y: auto;height: 100%;">
    @if (Model?.Anotacoes?.Count() > 0)
    {

        <div class="row">

            @foreach (var obs in Model.Anotacoes.OrderByDescending(d=>d.DataObservacao))
            {
                <div class="col-12 ">
                    <p class="bg-secondary text-light mb-0 ps-1">Data: @obs.DataObservacao</p>
                    <textarea readonly class="form-control" style="height:330px">@obs.Obs?.Replace("<br/>", "\n")</textarea>
                </div>
                <div class="col-12">
                    <button type="button" onclick="AbrirModalEditarAnotacoes_OnClick('@obs.Id')" class="btn text-center w-100" data-toggle="modal" data-target="#modalEditObs" style="width:30px!important">
                        <img src="~/icons-main/icons/pencil-square.svg" alt="Editar anotação" width="25" height="15" title="Editar">
                    </button>
                    <button onclick="RemoverAnotacao_OnClick('@obs.Id')" class="btn" data-toggle="modal" data-target="#modalEditObs" style="width:30px!important">
                        <img src="~/icons-main/icons/x-circle-fill.svg" alt="Deletar" width="25" height="15" title="Deletar">
                    </button>
                </div>
            }
        </div>

    }
    else
    {
        <div clas="row"><p class="text-center">Nenhuma anotação registrada para este paciente.</p></div>
    }

</div>
<div class="text-right mt-2">
    <button type="button" onclick="AbrirModalCadastroAnotacao_OnClick('@Model?.Id')" class="btn" data-toggle="modal" data-target="#modalRegisterObs">
        <img src="~/icons-main/icons/file-plus.svg" alt="Cadastrar Paciente" width="25" height="25" title="Cadastrar Paciente">
    </button>
</div>