<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NutriSoftwareV1</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/SwithAlerts/sweetalert2.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NutriSoftwareV1.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class='navbar navbar-expand-lg fixed-top navbar-light' style='background-color: #e3f2fd; padding-left: 90px;'>
            <span style='width:50px'><a class='navbar-brand' asp-action="Index" asp-controller="Paciente"><img src="~/imagens/logo-menu.jpg"  class='img-fluid' style='border-radius:50%;' /></a></span>
            <button class='navbar-toggler' type='button' data-toggle='collapse' data-target='#textoNavbar' aria-controls='textoNavbar' aria-expanded='false' aria-label='Alterna navegação'>
                <span class='navbar-toggler-icon'></span>
            </button>
            <div class='collapse navbar-collapse' id='textoNavbar'>
                <ul class='navbar-nav mr-auto'>

                    <li class='nav-item'>
                        <a class='nav-link' href='#'>Sair</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - NutriSoftwareV1 - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/js/jquery-3.6.4.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/SwithAlerts/sweetalert2.min.js"></script>
    <script src="~/jQuery-Mask/dist/jquery.mask.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
